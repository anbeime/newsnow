{
  "name": "youtube-trending-proxy",
  "version": "1.0.0",
  "description": "YouTube Trending Videos API Proxy - MCP Server",
  "type": "server",
  "endpoints": [
    {
      "name": "youtube.trending",
      "method": "GET",
      "path": "/api/youtube/trending",
      "description": "获取 YouTube 热门视频列表",
      "parameters": {},
      "returns": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "请求是否成功"
          },
          "data": {
            "type": "array",
            "description": "视频列表",
            "items": {
              "type": "object",
              "properties": {
                "videoId": {
                  "type": "string",
                  "description": "视频 ID"
                },
                "title": {
                  "type": "string",
                  "description": "视频标题"
                },
                "author": {
                  "type": "string",
                  "description": "作者名称"
                },
                "viewCount": {
                  "type": "number",
                  "description": "观看次数"
                },
                "viewCountText": {
                  "type": "string",
                  "description": "观看次数文本"
                },
                "published": {
                  "type": "number",
                  "description": "发布时间戳"
                },
                "publishedText": {
                  "type": "string",
                  "description": "发布时间文本"
                },
                "url": {
                  "type": "string",
                  "description": "YouTube 视频链接"
                },
                "invidious_url": {
                  "type": "string",
                  "description": "Invidious 视频链接"
                }
              }
            }
          },
          "count": {
            "type": "number",
            "description": "返回的视频数量"
          },
          "timestamp": {
            "type": "string",
            "description": "请求时间戳"
          }
        }
      }
    },
    {
      "name": "health",
      "method": "GET",
      "path": "/health",
      "description": "健康检查",
      "parameters": {},
      "returns": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "服务状态"
          },
          "timestamp": {
            "type": "string",
            "description": "当前时间戳"
          }
        }
      }
    }
  ],
  "environment_variables": {
    "INVIDIOUS_INSTANCE": {
      "description": "Invidious 实例地址",
      "default": "http://localhost:9000",
      "required": false
    },
    "PORT": {
      "description": "服务端口",
      "default": "3001",
      "required": false
    }
  }
}
